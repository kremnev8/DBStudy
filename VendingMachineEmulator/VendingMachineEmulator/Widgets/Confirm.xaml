<UserControl x:Class="VendingMachineEmulator.Confirm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VendingMachineEmulator"
             mc:Ignorable="d">
    <Grid Width="300" Height="150">
        <Rectangle Fill="Gray" RadiusX="10" RadiusY="10" Margin="0,0,-3,-3"/>
        <Rectangle Fill="White" RadiusX="10" RadiusY="10"/>

        <TextBlock x:Name="QuestionText"  Text="Do you want to apply changes?" TextAlignment="Center" TextWrapping="Wrap" Margin="10,15,10,0" VerticalAlignment="Top" FontSize="24" Height="77"/>

        <Button x:Name="CancelButton" Content="Отмена" HorizontalAlignment="Left" Margin="30,0,0,20" VerticalAlignment="Bottom" Width="74" FontSize="18" Height="28"/>
        <Button x:Name="OKButton" Content="Да" HorizontalAlignment="Right" Margin="0,0,30,20" VerticalAlignment="Bottom" Width="76" FontSize="18" Height="28"/>



    </Grid>
</UserControl>
