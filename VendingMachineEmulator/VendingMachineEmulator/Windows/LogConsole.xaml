<Window x:Class="VendingMachineEmulator.LogConsole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:VendingMachineEmulator"
        mc:Ignorable="d"
        Title="LogConsole" Height="450" Width="800">
    <Grid>
        <ScrollViewer Name="Scroller" Margin="0" Background="#FF000128">
            <TextBlock Name="OutputBlock"  Foreground="White" FontFamily="Consolas" Padding="10"/>
        </ScrollViewer>
    </Grid>
</Window>
